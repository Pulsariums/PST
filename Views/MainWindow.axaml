<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PST.Views.MainWindow"
        Title="PST - Pulsar's Translator"
        Width="400" Height="500"
        MinWidth="300" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        WindowState="Normal">

	<Window.Styles>
		<!-- Windows Titlebar rengi ile uyumlu gri tema -->
		<Style Selector="Window">
			<Setter Property="Background" Value="#FF2D2D30"/>
			<Setter Property="FontFamily" Value="Segoe UI"/>
		</Style>

		<Style Selector="TextBlock">
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
		</Style>

		<Style Selector="Border.sidebar">
			<Setter Property="Background" Value="#FF252526"/>
			<Setter Property="BorderThickness" Value="0,0,1,0"/>
			<Setter Property="BorderBrush" Value="#FF3E3E42"/>
		</Style>
		<Style Selector="Border.grid">
			<Setter Property="Background" Value="#FF252526"/>
			<Setter Property="BorderThickness" Value="0,0,0,1"/>
			<Setter Property="BorderBrush" Value="#FF3E3E42"/>
		</Style>

		<!-- Sidebar Buton Stilleri -->
		<Style Selector="Button.sidebar-button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="#FF3E3E42"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Margin" Value="0,0,0,3"/>
			<Setter Property="Padding" Value="4,5,4,4"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="Foreground" Value="#FFCCCCCC"/>
			<Setter Property="Width" Value="32"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="FontSize" Value="11"/>
		</Style>

		<Style Selector="Button.sidebar-button:pointerover">
			<Setter Property="Background" Value="#FF2A2A2C"/>
		</Style>

		<Style Selector="Button.sidebar-button:selected">
			<Setter Property="Background" Value="#FF007ACC"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
		</Style>

		<!-- Ana Buton Stilleri -->
		<Style Selector="Button.primary">
			<Setter Property="Background" Value="#FF007ACC"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="20,12"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="Button.primary:pointerover">
			<Setter Property="Background" Value="#FF1177BB"/>
		</Style>

		<!-- İkincil Buton Stilleri -->
		<Style Selector="Button.secondary">
			<Setter Property="Background" Value="#FF3C3C3C"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#FF555555"/>
			<Setter Property="Padding" Value="15,8"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="FontSize" Value="11"/>
		</Style>

		<!-- Input Stilleri -->
		<Style Selector="TextBox">
			<Setter Property="Background" Value="#FF1E1E1E"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#FF444444"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="FontSize" Value="12"/>
		</Style>

		<Style Selector="TextBox:focus">
			<Setter Property="BorderBrush" Value="#FF007ACC"/>
		</Style>

		<Style Selector="ComboBox">
			<Setter Property="Background" Value="#FF1E1E1E"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#FF444444"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="FontSize" Value="12"/>
		</Style>

		<!-- Kart Stilleri -->
		<Style Selector="Border.card">
			<Setter Property="Background" Value="#FF252526"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="BorderBrush" Value="#FF3E3E42"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="10,10,10,10"/>
		</Style>
	</Window.Styles>

	<Grid Background="#FF2D2D30">
		<!-- ANA GRID SATIR TANIMLARI -->
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<!-- Sürüklenebilir bölge - TÜM PENCERENİN ÜSTÜ -->
			<RowDefinition Height="*"/>
			<!-- Ana içerik (sidebar + içerik alanı) -->
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- SÜRÜKLENEBİLİR BÖLGE - TÜM PENCERENİN ÜSTÜNDE -->
		<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#10000000" PointerPressed="TitleBar_PointerPressed" Classes="grid" >
			
			<TextBlock Text="PST - Pulsar's Translator"
                       Foreground="#60FFFFFF" FontSize="10"
                       VerticalAlignment="Center" Margin="10,0"/>
		</Border>

		<!-- SOL SIDEBAR - Kompakt Sekmeler -->
		<Border Grid.Row="1" Grid.Column="0" Classes="sidebar">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="32"/>
				</Grid.RowDefinitions>

				<!-- Üst Sekmeler -->
				<StackPanel Grid.Row="0" Margin="8,8,8,8" Spacing="1" >
					<!-- Sekmeler  -->
					<Button Classes="sidebar-button" ToolTip.Tip="Ana Sayfa" Click="OnHomePageClicked">
						<Border>
							<Image Source="avares://PST/Assets/Icons/home.png" Width="24" Height="24"/>
						</Border>
					</Button>
					<Button Classes="sidebar-button" ToolTip.Tip="OCR Ayarları" Click="OnOcrSettingsClicked">
						<Border>
							<Image Source="avares://PST/Assets/Icons/square-dashed-mouse-pointer.png" Width="24" Height="24"/>
						</Border>
					</Button>
					<Button Classes="sidebar-button" ToolTip.Tip="Focus Ayarları" Click="OnFocusSettingsClicked">
						<Border>
							<Image Source="avares://PST/Assets/Icons/monitor-cog.png" Width="24" Height="24"/>
						</Border>
					</Button>
					<Button Classes="sidebar-button" ToolTip.Tip="Çeviri Ayarları" Click="OnTranslationSettingsClicked">
						<Border>
							<Image Source="avares://PST/Assets/Icons/languages.png" Width="24" Height="24"/>
						</Border>
					</Button>
					<Button Classes="sidebar-button" ToolTip.Tip="Çevrilmiş Görüntü Ayarları" Click="OnDisplaySettingsClicked">
						<Border>
							<Image Source="avares://PST/Assets/Icons/monitor-down.png" Width="24" Height="24"/>
						</Border>
					</Button>
				</StackPanel>

				<!-- Alt Kısım - Program Ayarları -->
				<StackPanel Grid.Row="1" Margin="8,8,8,8" Spacing="1" VerticalAlignment="Bottom">
					<Button Classes="sidebar-button" ToolTip.Tip="Genel ayarlar" Click="OnGeneralSettingsClicked">
						<Border>
							<Image Source="avares://PST/Assets/Icons/settings.png" Width="24" Height="24"/>
						</Border>
					</Button>
				</StackPanel>
			</Grid>
		</Border>

		<!-- SAĞ İÇERİK ALANI - Ana Sayfa -->
		<Grid Grid.Row="1" Grid.Column="1" Background="#FF2D2D30" x:Name="ContentArea">
			<ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5">
				<ContentControl x:Name="MainContentControl"/>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>