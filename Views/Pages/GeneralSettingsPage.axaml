<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PST.Views.Pages.GeneralSettingsPage">
	<ScrollViewer VerticalScrollBarVisibility="Hidden" Padding="1">
		<StackPanel Spacing="15">
			<TextBlock Text="Genel Ayarlar" FontSize="16" FontWeight="Bold"/>
			<TextBlock Text="Uygulama genel ayarları" FontSize="11" Foreground="#FFCCCCCC"/>

			<Border Classes="card">
				<StackPanel Spacing="10">
					<TextBlock Text="Başlangıç Ayarları" FontSize="12" FontWeight="SemiBold"/>
					<CheckBox Content="Windows başlangıcında aç" IsChecked="False"/>
					<CheckBox Content="Minimize başlat" IsChecked="False"/>
				</StackPanel>
			</Border>
		</StackPanel>
	</ScrollViewer>
</UserControl>